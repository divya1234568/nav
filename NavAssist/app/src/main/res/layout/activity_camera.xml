<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="#000000">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="â†"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_dark"
            android:layout_marginEnd="12dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“¸ AI Environment Scanner"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/tv_scan_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ” SCANNING"
            android:textSize="10sp"
            android:textColor="#00C97B"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Camera Preview + Overlay -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4">

        <androidx.camera.view.PreviewView
            android:id="@+id/camera_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.navassist.DetectionOverlayView
            android:id="@+id/overlay_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"/>

        <!-- Corner scan effect -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â¬› LIVE AI SCAN"
            android:textSize="10sp"
            android:textColor="#0057FF"
            android:layout_gravity="bottom|start"
            android:padding="8dp"/>
    </FrameLayout>

    <!-- Detection Results Panel -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#141929"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ” DETECTED ITEMS"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#8B97C4"
                android:letterSpacing="0.1"/>

            <Button
                android:id="@+id/btn_switch_mode"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="ðŸ“ Switch to Text"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/btn_outline"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"/>
        </LinearLayout>

        <!-- Scrollable detected items list -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_detected_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“¡ Initializing AI scanner..."
                android:textColor="#E8EEFF"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"/>
        </ScrollView>

        <!-- Read Aloud Button -->
        <Button
            android:id="@+id/btn_read_aloud"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="ðŸ”Š Read All Items Aloud"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#0057FF"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</LinearLayout>
